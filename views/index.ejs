<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DB version server</title>
  </head>
  <body>
    <p>Current DB version <strong id="dbversion"><%= dbversion %></strong></p>
    <button onClick="updateDBVersion()">Update DB version</button>

    <script>
      function updateDBVersion(language) {
        fetch('/dbversion', {
          method: 'POST',
        })
          .then((res) => res.json())
          .then(
            (data) =>
              (document.querySelector('#dbversion').innerHTML = data.dbversion)
          )
      }
    </script>
  </body>
</html>
